# Configuración para EasyPanel
# Configuración Adicional
SKIP_LICENSE_CHECK=true

# Copia este contenido en la pestaña "Environment" de tu servicio en EasyPanel

# ------------------------------
# BASE DE DATOS (OBLIGATORIO)
# ------------------------------
# URL de conexión interna (usando los datos de tu servicio Postgres en EasyPanel)
# Formato: postgresql://[usuario]:[contraseña]@[host_interno]:[puerto]/[base_de_datos]
DATABASE_URL=postgresql://postgres:TU_CONTRASEÑA_AQUI@aplicar_postgres:5432/aplicar

# ------------------------------
# CONFIGURACIÓN GENERAL
# ------------------------------
NODE_ENV=production
PORT=9000
# URL pública de tu aplicación (sin barra al final)
APP_URL=https://cr.ianampudia.com

# Secreto para sesiones (Genera una cadena aleatoria larga)
SESSION_SECRET=cambiar_esto_por_una_cadena_secreta_larga_y_aleatoria

# ------------------------------
# ADMINISTRADOR (OBLIGATORIO)
# ------------------------------
# Credenciales para el primer usuario administrador
SUPER_ADMIN_EMAIL=admin@ianampudia.com
SUPER_ADMIN_PASSWORD=cambiar_esta_contraseña_inmediatamente

# ------------------------------
# ALMACENAMIENTO
# ------------------------------
UPLOAD_DIR=/app/uploads
WHATSAPP_SESSION_DIR=/app/whatsapp-sessions

# ------------------------------
# INTEGRACIONES (OPCIONALES)
# ------------------------------

# WhatsApp (Meta Cloud API)
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=
# WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# OpenAI (para IA)
# OPENAI_API_KEY=

